<?xml version="1.0" encoding="utf-8"?>
<!-- This file, the project manifest, provides the overall configuration for your PreTeXt project. To edit the content of your document, open `source/main.ptx`. See https://pretextbook.org/doc/guide/html/processing-CLI.html#cli-project-manifest. -->
<project ptx-version="2">
    <targets>
<!-- Web targets -->
        <target 
            name="web-2026"
            deploy-dir="2026"
            format="html" 
            xsl="custom-web.xsl" 
            publication="publication-web.ptx" 
        />
        <target 
            name="web"
            deploy-dir="."
            format="html" 
            xsl="custom-web.xsl" 
            publication="publication-web.ptx" 
        />

<!-- Workbook targets -->
        <target 
            name="workbook" 
            format="pdf" 
            deploy-dir="pdf"
            publication="publication-workbook.ptx"
            xsl="custom-latex-workbook.xsl" 
            latex-engine="pdflatex"
            >
                <stringparams latex.preamble.early="\usepackage{parskip}" />
        </target>
        <target 
            name="workbook-2026" 
            format="pdf/workbook" 
            deploy-dir="2026/pdf/workbook"
            publication="publication-workbook.ptx"
            xsl="custom-latex-workbook.xsl" 
            latex-engine="pdflatex"
            >
                <stringparams latex.preamble.early="\usepackage{parskip}" />
        </target> 
        <target 
            name="workbook-latex" 
            format="latex" 
            publication="publication-workbook.ptx"
            xsl="custom-latex-workbook.xsl"
            >
                <stringparams latex.preamble.early="\usepackage{parskip}" />
        </target>

<!-- Full-print targets -->
        <target 
            name="fullprint" 
            format="pdf" 
            deploy-dir="pdf/fullprint"
            publication="publication-fullprint.ptx"
            xsl="custom-latex-fullprint.xsl" 
            latex-engine="pdflatex" 
        />
        <target 
            name="fullprint-2026" 
            format="pdf" 
            deploy-dir="2026/pdf/fullprint"
            publication="publication-fullprint.ptx"
            xsl="custom-latex-fullprint.xsl" 
            latex-engine="pdflatex" 
        />
        <target 
            name="fullprint-latex" 
            format="latex" 
            publication="publication-fullprint.ptx"
            xsl="custom-latex-fullprint.xsl" 
        />
    </targets>
</project>
