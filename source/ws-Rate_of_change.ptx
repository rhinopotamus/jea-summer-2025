				<cell right="minor" halign="center">58.2</cell>
				<cell right="minor" halign="center">55.7</cell>
				<cell right="minor" halign="center">49.9</cell>
				<cell right="minor" halign="center">45.1</cell>
				<cell right="minor" halign="center">53.3</cell>
