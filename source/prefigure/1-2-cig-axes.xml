<diagram dimensions="(500,300)" margins="(100,50,25,25)">
  <definition>
      labels=['0',
              '500',
              '1{,}000',
              '1{,}500',
              '2{,}000',
              '2{,}500',
              '3{,}000',
              '3{,}500',
              '4{,}000',
              '4{,}500']
    </definition>
  <coordinates bbox="(0,-0.1,130,4500)">
    <grid-axes
      vticks="(0,250,4500)"
      hticks="(0,5,130)"
      h-frame="bottom"
      v-frame="left"
      hlabels="(0,10,130)"
      vlabels="no"
      spacings="((0,5,130),(0,250,4500))">
      <ylabel
        offset="(-75,-150)"
        rotate="90"
        scale="1.2">
        S = cigarettes per year per person
      </ylabel>
      <xlabel 
        offset="(-350,-40)" 
        scale="1.2"> 
        Y = years since 1900 
      </xlabel>
    </grid-axes>
    <repeat parameter="k=0..9">
      <label anchor="(-1.5,500*k)" alignment="w">
        <m>${labels[k]}</m>
      </label>
    </repeat>
  </coordinates>
</diagram>